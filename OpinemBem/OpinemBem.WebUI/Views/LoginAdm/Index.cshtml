@using OpinemBem.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutInicioAdmin.cshtml";
}
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <img src="@Url.Content("~/Images/opinemmbem.png")" width="375" height="300" />
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form action="@Url.Action("Entrar", "LoginAdm")" class="form-horizontal" autocomplete="off">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.CPF, "CPF:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.CPF, new { @id = "txtCpf", @class = "form-control", @placeholder = "Ex.: 000.000.000-00", @required = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @required = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/moment-with-locales.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
    <script src="@Url.Content("~/Scripts/meiomask.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#txtCpf").setMask("cpf");
        });
    </script>
}