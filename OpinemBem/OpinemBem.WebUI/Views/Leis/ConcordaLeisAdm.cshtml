@using OpinemBem.Models
@model ProjetoDeLei
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>Projeto de Lei</h1>
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Nome, "Nome do Projeto:", new { @class = "control-label text-center" })    
                        <p>@Model.Nome</p>                                            
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Categoria.Id, "Categoria:", new { @class = "control-label text-center" })
                        <p>@Model.Categoria.Nome</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Descricao, "Descrição:", new { @class = "control-label text-center" })
                        <p>@Model.Descricao</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Vantagens, "Vantagens:", new { @class = "control-label text-center" })
                        <p>@Model.Vantagens</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.Desvantagens, "Desvantagens:", new { @class = "control-label text-center" })
                        <p>@Model.Desvantagens</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label">Você concorda com esse projeto?</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <a href=@Url.Action("ProjetoAdm", "Projetos")>
                            <input type="button" class="btn btn-success btn-lg" value="Sim" onclick="alert('Voto cadastrado com sucesso!'); return true;" />
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a href=@Url.Action("ProjetoAdm", "Projetos")>
                            <input type="button" class="btn btn-danger btn-lg" value="Não" onclick="alert('Voto cadastrado com sucesso!'); return true;" />
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
