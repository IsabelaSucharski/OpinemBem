    <div class="col-md-8 col-md-offset-2" style="padding-top: 25px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome do projeto</th>
                    <th>Tempo Disponível</th>
                    <th>Código</th>
                    <th>Votos</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProjetoDeLei item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.TempoDisponivel</td>
                        <td>@item.Id</td>
                        <td>0</td>
                    </tr>
