@using OpinemBem.Models
@model List<ProjetoDeLei>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <h1>Projetos à Aceitar </h1>
        <br />
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Pesquisar..." />
            <span class="input-group-btn">
                <button class="btn btn-primary" type="button">Procurar</button>
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2" style="padding-top: 25px;">
        <table class="table table-bordered">
            <thead class="text-center">
                <tr>
                    <th class="text-center" style="vertical-align: middle;">Nome do Projeto</th>
                    <th class="text-center" style="vertical-align: middle;">Tempo Disponível</th>
                    <th class="text-center" style="vertical-align: middle;">Categoria</th>
                    <th class="text-center" style="vertical-align: middle;">Votos à Favor</th>
                    <th class="text-center" style="vertical-align: middle;">Votos Contra</th>
                    <th class="text-center" style="vertical-align: middle;">Total de Votos</th>
                    <th class="text-center" style="vertical-align: middle;">Publicado?</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (ProjetoDeLei item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("GerenciarLeisAdm", "Leis", new { @id = item.Id })">
                                @item.Nome
                            </a>
                        </td>
                        <td>@item.TempoDisponivel</td>
                        <td>@item.Categoria.Nome</td>
                        <td>@item.VotosAFavor</td>
                        <td>@item.VotosContra</td>
                        <td>@item.TotalDeVotos</td>
                        <td>@(item.Publicado ? "Sim" : "Não")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>