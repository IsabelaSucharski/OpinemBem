@using OpinemBem.Models
@model List<ProjetoDeLei>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <h1>Projetos à Aceitar </h1>
        <br />
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form action="@Url.Action("Buscar","Leis")" class="form-horizontal">
            <div class="input-group">
                <input name="campoTexto" type="text" class="form-control" placeholder="Pesquisar..." />
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Procurar</button>
                </span>
            </div>
        </form>        
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2" style="padding-top: 25px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center" style="vertical-align: middle;">Nome do projeto</th>
                    <th class="text-center" style="vertical-align: middle;">Tempo disponível</th>
                    <th class="text-center" style="vertical-align: middle;">Categoria</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (ProjetoDeLei item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("GerenciarLeisAdm", "Leis", new { @id = item.Id })">
                                @item.Nome
                            </a>
                        </td>
                        <td>@item.TempoDisponivel</td>
                        <td>@item.Categoria.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>