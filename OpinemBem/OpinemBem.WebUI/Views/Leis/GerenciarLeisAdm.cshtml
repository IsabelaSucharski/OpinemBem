@using OpinemBem.Models
@model ProjetoDeLei
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Projeto de Lei</h1>
        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control-label text-center" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Descricao, "Descrição:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Vantagens, "Vantagens:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Vantagens, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Desvantagns, "Desvantagens:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Desvantagns, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <a href=@Url.Action("AceitarLeisAdm", "AceitarLeisAdm")>
                        <input type="button" class="btn btn-danger" value="Excluir" onclick="alert('Projeto excluido com sucesso!'); return true;" />
                    </a>
                </div>
                <div class="col-md-4">
                    <a href=@Url.Action("AlterarProjetos", "Projetos")>
                        <input type="button" class="btn btn-warning" value="Alterar" />
                    </a>
                </div>
                <div class="col-md-4">
                    <a href=@Url.Action("AceitarLeisAdm", "AceitarLeisAdm")>
                        <input type="button" class="btn btn-success" value="Publicar" onclick="alert('Projeto publicado com sucesso!'); return true;" />
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>