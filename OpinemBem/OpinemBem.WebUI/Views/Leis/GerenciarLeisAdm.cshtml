@using OpinemBem.Models
@model ProjetoDeLei
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Projeto de Lei</h1>
        <form class="form-horizontal" action="@Url.Action("SalvarLeisAdm","Leis")">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Nome, "Nome:", new { @class = "control-label text-center" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Categoria.Id, "Categoria:", new { @class = "control-label text-center" })
                    @Html.DropDownListFor(m => m.Categoria.Id, new SelectList(ViewBag.Categorias ?? new List<Categoria>(), "Id", "Nome"), "--[SELECIONE]--", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Descricao, "Descrição:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Vantagens, "Vantagens:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Vantagens, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Desvantagens, "Desvantagens:", new { @class = "control-label text-center" })
                    @Html.TextAreaFor(m => m.Desvantagens, new { @class = "form-control", @size = "47" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">                    
                        <input type="submit" class="btn btn-danger" value="Excluir" />
                </div>
                <div class="col-md-4">                    
                        <input type="submit" class="btn btn-warning" value="Alterar"/>
                </div>
                <div class="col-md-4">                    
                        <input type="submit" class="btn btn-success" value="Publicar" />                   
                </div>
            </div>
        </form>
    </div>
</div>