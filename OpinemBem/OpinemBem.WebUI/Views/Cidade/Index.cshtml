@using OpinemBem.Models
@model List<Cidade>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Cidades</h1>
        <a class="btn btn-primary" href="@Url.Action("CadastroC", "Cidade")">Nova Cidade</a>
        <br />
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Cód.</th>
                    <th class="text-center">Nome da Cidade</th>
                    <th class="text-center">Estado</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cidade item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Estado.Nome</td> 
                        <td>
                            <a href="@Url.Action("ExclirCidade", "Cidade", new { @id = item.Id })" onclick="javascript: if (!(confirm('Deseja realmente excluir esta cidade?'))) return false;">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>