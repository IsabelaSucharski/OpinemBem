@using OpinemBem.Models
@model Login
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Opinem Bem</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <img src="@Url.Content("~/Images/opinemmbem.png")" width="375" height="300" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.CPF, "CPF:", new { @class = "control-label text-center", @style = "font-size: x-large" })
                            @Html.TextBoxFor(m => m.CPF, new { @class = "form-control", @placeholder = "Ex.: 000.000.000-00", @size = "47" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control-label text-center", @style = "font-size: x-large" })
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder="6 dígitos", @size = "47" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <a href="LoginAdm.html">Adminsitrador?</a>
                        </div>
                        <div class="col-md-3">
                            <a href="Cadastrar.html">Cadastrar-se</a>
                        </div>
                        <div class="col-md-6 text-right">
                            <button type="button" class="btn btn-lg btn-primary" onclick="alert('Bem-Vindo ao Opinem Bem'); return true">Entrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
