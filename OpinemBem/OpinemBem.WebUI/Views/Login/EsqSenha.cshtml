@using OpinemBem.Models
@model EsqSenhaViewModel

@{
    Layout = "";
}

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Email, "Email:", new { @class = "control-label text-center" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Senha, "Nova Senha:", new { @class = "control-label text-center", @style = "font-size: 1.2em" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <a href=@Url.Action("Index","PerfilU")>
                        <input type="button" class="btn btn-primary" value="Alterar Senha" onclick="alert('Senha alterada com sucesso'); return true;" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
